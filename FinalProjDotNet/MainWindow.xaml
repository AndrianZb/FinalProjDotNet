                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  Grid.RowSpan="4"
                  AutoGenerateColumns="False" 
                  HorizontalAlignment="Center" 
                  Height="385" 
                  IsReadOnly="True" 
                  Margin="10" 
                  VerticalAlignment="Center"  
                  FontSize="20" 
                  Width="394" Foreground="#FF764949" Background="White" FontWeight="Bold" HeadersVisibility="Column" 
                  >

            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns >
                <DataGridTextColumn x:Name="id" Header="Id" Binding="{Binding Id}" MaxWidth="30" MinWidth="30" Visibility="Hidden"/>
                <DataGridTextColumn x:Name="firstName" Header="First Name" Binding="{Binding FirstName}" Width="195" />
                <DataGridTextColumn x:Name="lastName" Header="Last Name" Binding="{Binding LastName}" Width="195" />
                <DataGridTextColumn x:Name="phoneNum" Header="Phone Number" Binding="{Binding PhoneNum}" MaxWidth="100" MinWidth="100" Visibility="Hidden" />
