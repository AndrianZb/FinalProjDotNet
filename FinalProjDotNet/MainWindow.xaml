<Window x:Class="FinalProjDotNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjDotNet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Open File" HorizontalAlignment="Left" Margin="26,30,0,0" VerticalAlignment="Top" Width="95" Height="36" Name="OpenFile" Click="OpenFile_Click"/>
        <Button Content="Save File" HorizontalAlignment="Left" Margin="154,30,0,0" VerticalAlignment="Top" Width="95" Height="36" x:Name="OpenFile_Copy" Click="SaveFile_Click"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="701,126,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="View" HorizontalAlignment="Left" Margin="701,157,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="701,89,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="701,53,0,0" VerticalAlignment="Top" Width="75"/>
        
        
        
        <DataGrid Name="myDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="229" Margin="26,89,0,0" VerticalAlignment="Top" Width="626" SelectionChanged="myDataGrid_SelectionChanged">
            <DataGrid.Columns>
               
                <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding Path= FirstName}" Width="100"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding Path=LastName}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Path=Email}" Width="150"/>
                <DataGridTextColumn Header="Phone Number" Binding="{Binding Path=PhoneNum}" Width="300" />

            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
